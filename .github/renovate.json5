{
  "extends": [
    "config:recommended",
    "schedule:daily"
  ],
  "commitMessageSuffix": " in {{packageFile}}",
  "dependencyDashboard": true,
  "automerge": true,
  "automergeStrategy": "rebase",
  "platformAutomerge": true,
  "labels": [
    "dependencies"
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ]
  },
  "packageRules": [
    {
      "updateTypes": ["major"],
      "automerge": false
    },
    {
      "updateTypes": ["minor"],
      "automerge": true,
      "groupName": "minor updates"
    },
    {
      "updateTypes": ["patch"],
      "automerge": true,
      "groupName": "patch updates"
    }
  ]
}
